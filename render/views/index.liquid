<div class="login-flex-wrap">
    <div class="login-left">

        <!-- login page/form -->
        <div class="login-heading-row">
            <h2>Vermont Kids Data</h2>
        </div>

        <!-- <p style="margin-bottom: 36px;">Sign in or sign up to get the right lead, to the right rep, at the right time!</p> -->

        <form class="" method="POST" action="/">
            <div id="error"></div>
            <div>
                <label class="sr-only" for="inputEmail">Email address</label>
                <input class="form-control" value="" type="email" name="username" id="username" placeholder="Your login or e-mail" required="required" autofocus="autofocus"/>
                <label class="sr-only" for="inputPassword">Password</label>
                <input class="form-control" value="" type="password" name="password" id="password" placeholder="Password" required="required"/>
                <div class="checkbox mb-3"></div>

                <div class="buttons">

                    <button class="solid" type="submit" style="width: 100px">SIGN IN</button>
                    <div style="display: flex; justify-content: space-between;">
                        <a href="/signup" class="login-link">Create an account</a>
                        <a href="/signup/forgotpassword" class="login-link">Reset your password</a>
                    </div>

                </div>
            </div>
        </form>

        {% if isSessionActive %}
            <div>Session Active!</div>
        {% endif %}

    </div>
