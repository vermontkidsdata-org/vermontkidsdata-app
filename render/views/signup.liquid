{% layout 'header.liquid' %}

{% block content %}

  <div class="row">
      <h2>Sign Up</h2>
      <div>
          {% if msg %}
              <div>{{msg}}</div>
          {% endif %}
      </div>
      <form class="form-signin" method="POST" action="/signup">
          <label for="inputEmail" class="sr-only"> Email address </label>
          <input style="width: 400px; margin-bottom: 1em;" type="email" name="username" id="inputEmail" class="form-control" placeholder="Email address" required autofocus />

          <label for="inputPassword" class="sr-only"> Password</label>
          <input style="width: 400px; margin-bottom: 1em;" type="password" name="password" id="inputPassword"  class="form-control"  placeholder="Password" required />

          <label for="inputPassword" class="sr-only">Confirm Password</label>
          <input style="width: 400px; margin-bottom: 1em;" type="password" name="passwordconfirm" id="inputPasswordConfirm"  class="form-control"  placeholder="Confirm Password" required />

          <button class="button" type="submit">Sign Up</button>

      </form>
  </div>

{% endblock %}

{% layout 'footer.liquid' %}
