{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "..",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node",
      "jest",
      "aws-lambda"
    ]
  },
  "include": [
    "./**/*.ts",
    "../lib/**/*.ts",
    "../src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}